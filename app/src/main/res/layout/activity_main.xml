<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/fondo_con_degradado">


    <EditText
        android:id="@+id/TextoA"
        android:layout_width="310dp"
        android:layout_height="99dp"
        android:autofillHints="Texto a comparar"
        android:background="@drawable/bordes_redondos_background"
        android:elevation="8dp"
        android:gravity="center"
        android:hint="@string/InitialTextA"
        android:inputType="text"
        android:padding="16dp"
        android:text="@string/InitialTextA"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.125" />

    <Button
        android:id="@+id/button"
        android:layout_width="128dp"
        android:layout_height="98dp"
        android:text="@string/Boton"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TextoA"
        app:layout_constraintVertical_bias="0.105" />

    <EditText
        android:id="@+id/editText"
        android:layout_width="310dp"
        android:layout_height="99dp"
        android:autofillHints="Texto a comparar"
        android:background="@drawable/bordes_redondos_background"
        android:elevation="8dp"
        android:gravity="center"
        android:hint="@string/InitialTextB"
        android:inputType="text"
        android:padding="16dp"
        android:text="@string/InitialTextB"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button"
        app:layout_constraintVertical_bias="0.181" />

    <TextView
        android:id="@+id/resultadoTextView"
        android:layout_width="310dp"
        android:layout_height="99dp"
        android:layout_marginTop="52dp"
        android:gravity="center"
        android:background="@drawable/bordes_redondos_background"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editText"
        app:layout_constraintVertical_bias="0.237" />

</androidx.constraintlayout.widget.ConstraintLayout>